{
  "name": "Forge Config",
  "scopeName": "source.forge",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#properties" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.forge",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.forge",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.forge",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.forge",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.boolean.forge",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "support.type.property-name.forge",
          "match": "\"(name|version|language|sources|dependencies|config|modules|output|targets|ffi|exports|imports)\"\\s*:"
        },
        {
          "name": "variable.other.property.forge",
          "match": "\"[^\"]+\"\\s*:"
        }
      ]
    }
  }
}
