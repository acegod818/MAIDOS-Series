<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Forge.Studio.ViewModels"
        x:Class="Forge.Studio.Views.PluginManagerDialog"
        x:DataType="vm:PluginManagerViewModel"
        Title="Plugin Manager"
        Width="900" Height="650"
        WindowStartupLocation="CenterOwner"
        Background="#2D3436">

    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1E272E" Padding="24,16">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Plugin Manager" FontSize="20" FontWeight="Bold" 
                               Foreground="#FF6B35" />
                    <TextBlock Text="{Binding PluginSummary}" Foreground="#B2BEC3" FontSize="12" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <TextBox Text="{Binding SearchQuery}" Watermark="Search plugins..."
                             Width="200" />
                    <Button Content="âŸ³ Refresh" Command="{Binding RefreshCommand}"
                            Padding="12,8" />
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="220,*">
            
            <!-- Categories -->
            <Border Grid.Column="0" Background="#1E272E" Padding="0">
                <ListBox ItemsSource="{Binding Categories}" 
                         SelectedItem="{Binding SelectedCategory}"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*,Auto" Margin="12,8">
                                <TextBlock Grid.Column="0" Text="{Binding Icon}" 
                                           FontSize="16" Margin="0,0,12,0" />
                                <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                           Foreground="#DFE6E9" />
                                <Border Grid.Column="2" Background="#636E72" 
                                        CornerRadius="10" Padding="8,2">
                                    <TextBlock Text="{Binding Count}" FontSize="10" 
                                               Foreground="White" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            
            <!-- Plugin List -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*">
                
                <!-- Tabs -->
                <Border Grid.Row="0" Background="#232B30" Padding="16,8">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <RadioButton Content="Installed" IsChecked="{Binding ShowInstalled}"
                                     GroupName="PluginView" />
                        <RadioButton Content="Available" IsChecked="{Binding ShowAvailable}"
                                     GroupName="PluginView" />
                        <RadioButton Content="Updates" IsChecked="{Binding ShowUpdates}"
                                     GroupName="PluginView" />
                    </StackPanel>
                </Border>
                
                <!-- Plugin Cards -->
                <ScrollViewer Grid.Row="1" Padding="16">
                    <ItemsControl ItemsSource="{Binding FilteredPlugins}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E272E" CornerRadius="8" 
                                        Padding="16" Margin="0,0,0,12">
                                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                        
                                        <!-- Icon -->
                                        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                                                Background="{Binding IconBackground}"
                                                CornerRadius="8" Width="48" Height="48"
                                                Margin="0,0,16,0" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Icon}" FontSize="24"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                        
                                        <!-- Name & Version -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" 
                                                    Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding Name}" FontSize="14"
                                                       FontWeight="SemiBold" Foreground="#DFE6E9" />
                                            <TextBlock Text="{Binding Version}" FontSize="12"
                                                       Foreground="#636E72" VerticalAlignment="Center" />
                                            <Border Background="{Binding StatusColor}" 
                                                    CornerRadius="4" Padding="6,2"
                                                    IsVisible="{Binding IsInstalled}">
                                                <TextBlock Text="Installed" FontSize="9" 
                                                           Foreground="White" />
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- Description -->
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding Description}"
                                                   Foreground="#B2BEC3" FontSize="12"
                                                   TextWrapping="Wrap" Margin="0,4,0,8" />
                                        
                                        <!-- Metadata -->
                                        <StackPanel Grid.Row="2" Grid.Column="1" 
                                                    Orientation="Horizontal" Spacing="16">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Language:" Foreground="#636E72" 
                                                           FontSize="10" />
                                                <TextBlock Text="{Binding Language}" 
                                                           Foreground="#00B894" FontSize="10" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="FFI:" Foreground="#636E72" 
                                                           FontSize="10" />
                                                <TextBlock Text="{Binding FfiMethod}" 
                                                           Foreground="#00B894" FontSize="10" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Author:" Foreground="#636E72" 
                                                           FontSize="10" />
                                                <TextBlock Text="{Binding Author}" 
                                                           Foreground="#B2BEC3" FontSize="10" />
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Actions -->
                                        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="2"
                                                    VerticalAlignment="Center" Spacing="8">
                                            <Button Content="{Binding ActionText}" 
                                                    Command="{Binding $parent[ItemsControl].((vm:PluginManagerViewModel)DataContext).PluginActionCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="{Binding ActionColor}"
                                                    Foreground="White" Padding="16,8"
                                                    HorizontalContentAlignment="Center"
                                                    Width="100" />
                                            <Button Content="Details" 
                                                    Command="{Binding $parent[ItemsControl].((vm:PluginManagerViewModel)DataContext).ShowDetailsCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" 
                                                    Foreground="#B2BEC3" Padding="16,4"
                                                    HorizontalContentAlignment="Center"
                                                    Width="100" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#1E272E" Padding="24,12">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#B2BEC3" 
                               VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Install from File..." 
                            Command="{Binding InstallFromFileCommand}"
                            Padding="16,8" />
                    <Button Content="Close" Command="{Binding CloseCommand}"
                            Padding="16,8" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
