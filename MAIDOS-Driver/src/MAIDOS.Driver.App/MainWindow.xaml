<Window x:Class="MAIDOS.Driver.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAIDOS Driver Manager v1.0 [ADMIN]" Height="500" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="ScanButton" Content="Scan" Click="ScanButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="InstallButton" Content="Install" Click="InstallButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="UpdateButton" Content="Update" Click="UpdateButton_Click" Width="100" Margin="0,0,10,0" Background="LightSkyBlue"/>
            <Button x:Name="BackupButton" Content="Backup" Click="BackupButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="DiagnoseButton" Content="Diagnose" Click="DiagnoseButton_Click" Width="100" Margin="0,0,10,0" Background="LightGoldenrodYellow"/>
            <Button x:Name="RollbackButton" Content="Rollback" Click="RollbackButton_Click" Width="100" Background="MistyRose" Margin="0,0,10,0"/>
        </StackPanel>

        <DataGrid x:Name="DevicesDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="1.5*"/>
                <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="*"/>
                <DataGridTextColumn Header="Resource" Binding="{Binding ResourceInfo}" Width="0.8*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Diagnosis" Binding="{Binding ProblemDescription}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="2" Text="Ready" Margin="0,10,0,0" FontWeight="Bold"/>
    </Grid>
</Window>