{
  "name": "@maidos/codeqc",
  "version": "0.3.3",
  "description": "Code Quality Control tool implementing Code-QC v3.3 — 軟體工程硬體化 (Hardware-ification of Software Engineering)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "bin": {
    "maidos-codeqc": "./dist/cli.js",
    "codeqc": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "code-quality",
    "linter",
    "static-analysis",
    "code-qc",
    "maidos"
  ],
  "author": "MAIDOS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maidos/codeqc.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^10.3.10",
    "web-tree-sitter": "^0.22.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-javascript": "^0.20.0",
    "tree-sitter-python": "^0.20.0",
    "tree-sitter-rust": "^0.20.0",
    "tree-sitter-typescript": "^0.20.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter-typescript": {
      "optional": true
    },
    "tree-sitter-javascript": {
      "optional": true
    },
    "tree-sitter-python": {
      "optional": true
    },
    "tree-sitter-rust": {
      "optional": true
    },
    "tree-sitter-go": {
      "optional": true
    }
  }
}
